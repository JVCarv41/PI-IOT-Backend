{
  "version": 2,
  "builds": [
    { 
      "src": "src/app.js", 
      "use": "@vercel/node",
      "config": { 
        "maxLambdaSize": "10mb",
        "includeFiles": ["src/**"] 
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/src/app.js",
      "methods": ["GET", "POST"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/src/app.js" }
  ]
}